[Unit]
Description=MaxOS API Service
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/maxos
EnvironmentFile=-/etc/maxos.env
ExecStart=/opt/maxos/.venv/bin/uvicorn max_os.interfaces.api.main:app --host 127.0.0.1 --port 8000
Restart=on-failure
User=maxos
Group=maxos

[Install]
WantedBy=multi-user.target
